{
  "theme": "Dracula",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "inlay_hints": {
    "enabled": true
  },
  "soft_wrap": "editor_width",
  "formatter": "auto",
  "format_on_save": "on",
  "journal": {
    "hour_format": "hour24"
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "Python": {
      "inlay_hints": {
        "enabled": true
      }
    }
  }
}
